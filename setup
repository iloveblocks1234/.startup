#!/bin/bash
sudo chmod +x main
sudo chmod +x remove
echo "[Permissions updated]"
sudo touch /home/$(whoami)/.startupinfo/bashrc-backup
echo "[Backup file created]"
sudo cp ~/.bashrc /home/$(whoami)/.startupinfo/bashrc-backup
echo "[~./bashrc backup written]"
cat <<EOF > /home/$(whoami)/.startupinfo/startupinfocommand
#!/bin/bash
if [[ \$1 = "-r" ]]; then
  read -p "Are you sure (y/n): " conf
  if [[ \$conf == "y" ]]; then
    cd /home/$(whoami)/.startupinfo
    ./remove
  fi
elif [[ \$1 = "-d" ]]; then
  cp /home/$(whoami)/.startupinfo/bashrc-backup ~/.bashrc
elif [[ \$1 = "-h" ]]; then
  echo "startupinfo [OPTIONS]"
  echo "options:"
  echo "  -h; help"
  echo "  -e; enable     Run the script and show your info on startup"
  echo "  -d; disable    Halt the script and prevent it from running on startup"
  echo "  -r; remove     Remove this script and everything related to it"
  echo "  -u; update     Updates .startupinfo to the newest version"
  echo "  -v; version    Displays the version of .startupinfo"
elif [[ \$1 = "-e" ]]; then
  cd /home/$(whoami)/.startupinfo
  ./main
elif [[ \$1 = "-u" ]]; then 
  cd \$(sudo find /home -type d -name ".startupinfo" -print -quit)
  ./remove
  cd /home/\$(whoami)
  git clone https://github.com/iloveblocks1234/.startupinfo.git
  cd .startupinfo
  sudo chmod +x setup
  ./setup
elif [[ \$1 = "-v" ]]; then
  echo "Versions:"
  echo "  Version 1.0; Just the plain command"
  echo "  Version 1.1; Added a remove function and a README"
  echo "  Version 1.2.0; Added the command and fixed minor bugs"
  echo "  Version 1.2.1; Fixed the broken v1.2.0"
  echo "  Version 1.3; Removed Halt file and replaced with a restore ~/.bashrc command"
  echo "  ___________________________________________________"
  echo "  Dev version 1.4; Improved safety fratures"
fi
EOF
echo "[Command file written]"
sudo cp /home/$(whoami)/.startupinfo/startupinfocommand /bin/startupinfo
sudo cp /home/$(whoami)/.startupinfo/startupinfocommand /usr/bin/startupinfo
echo "[Command copied to /bin and /usr/bin]"
sudo chmod +x /bin/startupinfo
sudo chmod +x /usr/bin/startupinfo
echo "[Command permissions updated]"
sudo rm -rf /home/$(whoami)/.startupinfo/startupinfocommand
echo "[Removed init files]"
echo "'startupinfo -h' for help"
